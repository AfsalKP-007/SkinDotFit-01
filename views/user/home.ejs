	<script>

      let user = <%- JSON.stringify(locals.user) %>;
	
		document.addEventListener("DOMContentLoaded", function () {

			
			if(!user){
			let content = document.getElementById("mainDiv");
			content.style.opacity = "0";
			setTimeout(() => {
				content.style.transition = "all 0.9s ease-in-out";
                content.style.opacity = "1";
			}, 900); 
			isShown = true
		}else
			let content = document.getElementById("mainDiv");
			content.style.opacity = "0";
			setTimeout(() => {
				content.style.transition = "all 0.5s ease-in-out";
                content.style.opacity = "1";
			}, 100); 

		}
		});
	
	</script>
	